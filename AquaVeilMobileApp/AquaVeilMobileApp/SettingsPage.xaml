<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaVeilMobileApp.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" FontSize="30">Настройки</Label>
            <ScrollView>
                <StackLayout>

                    <Label HorizontalTextAlignment="Start" FontSize="14">Длинна кадра</Label>
                    <Entry x:Name="eWidth" Placeholder="Длинна"/>

                    <Label HorizontalTextAlignment="Start" FontSize="14">Ширина</Label>
                    <Entry x:Name="eHeight" Placeholder="Ширина"/>

                    <Button x:Name="btSubmit" Clicked="BtSubmit_OnClicked" Text="Сохранить"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>